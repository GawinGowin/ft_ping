{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "ping_make",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/reference/iputils"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "cppbuild",
      "label": "ping_init",
      "command": "bash",
      "args": [
        "-c",
        "cd ${workspaceFolder}/reference/iputils && ./configure && meson build"
      ]
    }
  ],
  "version": "2.0.0"
}